<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_food_item1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/default_bg"
    tools:context="es.source.code.activity.SCOSEntry">

    <LinearLayout
        android:id="@+id/ll_food_item"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_food"
            android:layout_width="@dimen/image_height_large"
            android:layout_height="@dimen/image_height_large"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_food_name"
                style="@style/ItemTitle"/>

            <TextView
                android:id="@+id/tv_food_price"
                style="@style/ItemContent"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_order"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:background="@drawable/theme_button_bg_blue_selector"/>
    </LinearLayout>

    <View style="@style/Divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>
