<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_role"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodView">

    <android.support.design.widget.TabLayout
        app:tabGravity="fill"
        android:id="@+id/order_tablayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        app:tabIndicatorColor="#66ff33"
        app:tabIndicatorHeight="2dp"
        app:tabTextColor="@color/green"
        app:tabSelectedTextColor="@color/green_pressed"
        app:tabMode="fixed">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/order_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
    <TextView
        android:id="@+id/order_number"
        style="@style/ItemContent"/>

    <TextView
        android:id="@+id/order_price"
        android:text="提交订单"
        style="@style/ItemContent"/>

    <TextView
        android:id="@+id/btn_submit"
        android:text="提交订单"
        style="@style/BottomButton"/>

</LinearLayout>
